<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_player"
    tools:context=".himalaya.PlayerActivity">

    <TextView
        android:id="@+id/track_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="标题内容"
        android:textSize="20sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/track_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track_title"
        android:layout_marginBottom="130dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track_viewpager"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-130dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/current_position"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="00:00"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/current_seekbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="60dp"
                android:maxHeight="3dp"
                android:thumb="@mipmap/progress_point"
                android:progressDrawable="@drawable/bg_adjust_seek_bar"
                android:layout_toRightOf="@+id/current_position" />

            <TextView
                android:id="@+id/total_position"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="-50dp"
                android:layout_toEndOf="@+id/current_seekbar"
                android:text="00:00"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detail_track_icon"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/bottom_play_1" />

            <ImageView
                android:id="@+id/previous_track_icon"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/bottom_play_2" />

            <ImageView
                android:id="@+id/play_track_icon"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/bottom_play_3" />

            <ImageView
                android:id="@+id/next_track_icon"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/bottom_play_4" />

            <ImageView
                android:id="@+id/favorite_track_icon"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/bottom_play_5" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>